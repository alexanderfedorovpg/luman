    +b.rating()&attributes(attributes)
        +e.SPAN.item
            input#rate1(type="radio" name="rating")
            label(for="rate1") 1
        +e.SPAN.item
            input#rate2(type="radio" name="rating")
            label(for="rate2") 2
        +e.SPAN.item
            input#rate3(type="radio" name="rating")
            label(for="rate3") 3
        +e.SPAN.item
            input#rate4(type="radio" name="rating")
            label(for="rate4") 4
        +e.SPAN.item
            input#rate5(type="radio" name="rating")
            label(for="rate5") 5
        +e.SPAN.item
            input#rate6(type="radio" name="rating" checked)
            label(for="rate6") 6
        +e.SPAN.item
            input#rate7(type="radio" name="rating")
            label(for="rate7") 7
        +e.SPAN.item
            input#rate8(type="radio" name="rating")
            label(for="rate8") 8