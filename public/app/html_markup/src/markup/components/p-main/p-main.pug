mixin p-main(data)
    +b.working.working--main()&attributes(attributes)
        each item in data.items
            +e.item
                +e.wrap
                    +e.col-l
                        +b.time-publish
                            +e.TIME.date 15 января 2017
                            +e.TIME.hours 15:18
                    +e.col-r
                        +e.HEADER.header
                            +b.rating
                                +e.SPAN.item.is-active(class= item.ratingClass)
                                    input(type="radio", name="rating", id= item.ratingClass, disabled)
                                    label(for= item.ratingClass)= item.rating

                            +e.P.tag= item.tag

                        +e.cnt(class= item.cntClass)
                            p(class= item.ratingClass)= item.cnt

                        +b.working-d-tag
                            +e.SPAN.item #внешняя политика
                            +e.SPAN.item #США

                    +e.SPAN.ignore.icon.icon-delete.tooltip(data-tooltip='Игнорировать')
                    +e.SPAN.work.icon.icon-go-right.tooltip(data-tooltip='Работаем!')
        block