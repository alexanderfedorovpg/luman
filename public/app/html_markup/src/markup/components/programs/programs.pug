mixin programs(data)
    +b.programs()&attributes(attributes)
        block
        each item in data.items

            +e.item(class=(item.class ? '_' + item.class : undefined))

                +e.DIV.img-container
                    +e.IMG.img(src= '%=static=%' + item.image)

                +e.DIV.info
                    +e.P.date
                        = item.date
                        | ,
                        +e.SPAN.time= item.time
                    +e.A.category(href-jv0)= item.category
                    +e.P.title(class=(item.titleClass ? '_' + item.titleClass : undefined))= item.title

                    +e.DIV.tags
                        each tag in item.tags
                            +e.SPAN.tag
                                | #
                                = tag
                
                +e.DIV.btn-container
                    button.btn.btn-md.btn-danger
                        i.icon.icon-delete-reverse
                        | Удалить
                    button.btn.btn-md.btn-success Редактировать

                +e.DIV.close-container
                    i.icon.icon-delete-reverse
                    +e.DIV.close-tip Убрать с главной
